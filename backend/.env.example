# ===================================
# Backend Configuration for Interface Wizard
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# ===================================

# Database Configuration (OpenEMR)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=openemr
DB_USER=openemr
DB_PASSWORD=openemr

# OpenEMR API Configuration
OPENEMR_USERNAME=openemr
OPENEMR_PASSWORD=openemr
OPENEMR_BASE_URL=http://localhost/openemr

# Mirth Connect Configuration
MIRTH_HOST=localhost
MIRTH_PORT=8443
MIRTH_USERNAME=admin
MIRTH_PASSWORD=admin
MIRTH_USE_HTTPS=true

# MLLP Configuration (HL7 Messages)
MLLP_HOST=localhost
MLLP_PORT=6661

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# FHIR Configuration
FHIR_BASE_URL=http://localhost/openemr/apis/default/fhir

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars-long

# CORS Configuration (Frontend URLs)
CORS_ORIGINS=["http://localhost:4200","http://localhost:3000"]

# Optional: Logging Level
LOG_LEVEL=INFO

# Optional: Environment
ENVIRONMENT=development
